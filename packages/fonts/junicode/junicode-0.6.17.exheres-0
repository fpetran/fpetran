require sourceforge [ project=junicode suffix=zip pv=$(ever replace_all -) ]

SUMMARY="Junius-Unicode font for medievalists."

LICENCES="GPL-2"
SLOT="0"
PLATFORMS="~amd64"
MYOPTIONS=""

WORK="${WORKBASE}"/${PN}

src_install() {
    cd "${WORK}"/fonts
    insinto /usr/share/fonts/X11/${PN}
    doins *.ttf
}

